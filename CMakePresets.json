{
    "version": 6,
    "configurePresets": [
        {
            "name": "Debug",
            "binaryDir": "${sourceDir}/debug",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "binaryDir": "${sourceDir}/release",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "configuration": "Debug",
            "targets": [
                "JustlyTests"
            ]
        },
        {
            "name": "Release",
            "configurePreset": "Release",
            "configuration": "Release",
            "targets": [
                "Justly"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "configuration": "Debug",
            "environment": {
                "QT_QPA_PLATFORM": "offscreen"
            },
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error"
            }
        }
    ],
    "packagePresets": [
        {
            "name": "Release",
            "configurePreset": "Release",
            "configurations": [
                "Release"
            ]
        }
    ]
}