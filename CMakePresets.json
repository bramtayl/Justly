{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "configure-debug-preset",
            "binaryDir": "debug/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_BUILD_TYPE": {
                    "value": "Debug"
                }
            }
        },
        {
            "name": "configure-relese-preset",
            "binaryDir": "release/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_BUILD_TYPE": {
                    "value": "Release"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug-preset",
            "configurePreset": "configure-debug-preset",
            "targets": ["JustlyTests"]
        },
        {
            "name": "build-release-preset",
            "configurePreset": "configure-release-preset",
            "targets": ["Justly"]
        }
    ],
    "testPresets": [
        {
            "name": "test-debug-preset",
            "configurePreset": "configure-debug-preset",
            "environment": {
                "QT_QPA_PLATFORM": "offscreen"
            },
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error"
            }
        }
    ],
    "packagePresets": [
        {
            "name": "package-release-preset",
            "configurePreset": "configure-release-preset"
        }
    ]
}