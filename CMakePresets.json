{
    "version": 6,
    "configurePresets": [
        {
            "name": "Release",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-15",
                "CMAKE_CXX_COMPILER": "clang++-15",
                "CMAKE_CXX_INCLUDE_WHAT_YOU_USE": "include-what-you-use"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Release",
            "configuration": "Release",
            "targets": [
                "Justly",
                "JustlyTests"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "Release",
            "configurePreset": "Release",
            "configuration": "Release",
            "environment": {
                "QT_QPA_PLATFORM": "offscreen"
            },
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "noTestsAction": "error"
            }
        }
    ],
    "packagePresets": [
        {
            "name": "TGZ",
            "configurePreset": "Release",
            "generators": [
                "TGZ"
            ],
            "configurations": [
                "Release"
            ]
        },
        {
            "name": "ZIP",
            "configurePreset": "Release",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Release"
            ]
        }
    ]
}