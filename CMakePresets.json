{
    "version": 6,
    "configurePresets": [
        {
            "name": "configure_Justly",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "configure_tests",
            "binaryDir": "${sourceDir}/tests",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "Justly_TEST": "ON"
            }
        },
        {
            "name": "configure_with_Clang",
            "inherits": "configure_Justly",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-15",
                "CMAKE_CXX_COMPILER": "clang++-15",
                "CMAKE_CXX_INCLUDE_WHAT_YOU_USE": "include-what-you-use",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build_Justly",
            "configurePreset": "configure_Justly",
            "configuration": "Release",
            "targets": ["Justly"]
        },
        {
            "name": "build_with_Clang",
            "configurePreset": "configure_with_Clang",
            "configuration": "Release",
            "targets": ["Justly"]
        },
        {
            "name": "build_tests",
            "configurePreset": "configure_tests",
            "configuration": "Release",
            "targets": ["Justly"]
        }
    ],
    "packagePresets": [
        {
            "name": "package_as_TGZ",
            "configurePreset": "configure_Justly",
            "generators": [
                "TGZ"
            ],
            "configurations": [
                "Release"
            ]
        },
        {
            "name": "package_as_ZIP",
            "configurePreset": "configure_Justly",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Release"
            ]
        }
    ]
}