{
    "version": 6,
    "configurePresets": [
        {
            "name": "default_configure",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "configure_with_tests",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "JUSTLY_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "clang",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-15",
                "CMAKE_CXX_COMPILER": "clang++-15",
                "CMAKE_CXX_INCLUDE_WHAT_YOU_USE": "include-what-you-use",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build_with_tests",
            "configurePreset": "configure_with_tests",
            "configuration": "Release",
            "targets": [
                "Justly",
                "JustlyTests",
                "justly_editor"
            ]
        },
        {
            "name": "default_build",
            "configurePreset": "default_configure",
            "configuration": "Release",
            "targets": [
                "Justly",
                "justly_editor"
            ]
        }
    ],
    "packagePresets": [
        {
            "name": "TGZ",
            "configurePreset": "default_configure",
            "generators": [
                "TGZ"
            ],
            "configurations": [
                "Release"
            ]
        },
        {
            "name": "ZIP",
            "configurePreset": "default_configure",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Release"
            ]
        }
    ]
}